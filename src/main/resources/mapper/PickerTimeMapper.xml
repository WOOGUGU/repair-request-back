<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kkkoke.networkrepair.dao.PickerTimeDao">
    <insert id="addPickerTime" parameterType="com.kkkoke.networkrepair.pojo.PickerTime">
        insert into `time`(time_subscribe)
        values(#{time})
    </insert>

    <delete id="deletePickerTime" parameterType="int">
        delete from `time`
        where id = #{id}
    </delete>

    <select id="selectPickerTime" parameterType="int" resultMap="pickerTimeMap">
        select * from `time`
        where id = #{id}
    </select>

    <select id="selectPickerTimeByTime" resultMap="pickerTimeMap">
        select * from `time`
        where time_subscribe = #{time}
    </select>

    <select id="selectAllPickerTime" resultMap="pickerTimeMap">
        select *
        from `time`
        order by `time_subscribe`
    </select>

    <update id="updatePickerTime">
        update `time`
        set time_subscribe = #{time}
        where id = #{id}
    </update>

    <resultMap id="pickerTimeMap" type="com.kkkoke.networkrepair.pojo.PickerTime">
        <id property="id" column="id"/>
        <result property="time" column="time_subscribe"/>
    </resultMap>
</mapper>