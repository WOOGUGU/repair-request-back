<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.kkkoke.networkrepair.dao.OrderDao">
    <insert id="addOrder" parameterType="com.kkkoke.networkrepair.pojo.Order">
        insert into `order`(username, sender, tel, type, des, position, time_subscribe, time_start)
        values(#{username}, #{sender}, #{tel}, #{type}, #{des}, #{position}, #{timeSubscribe}, #{timeStart})
    </insert>

    <delete id="deleteOrder" parameterType="long">
        delete from `order`
        where id = #{id}
    </delete>

    <select id="selectOrderById" parameterType="long" resultMap="orderMap">
        select * from `order`
        where id = #{id}
    </select>

    <select id="selectAllOrder" resultMap="orderMap">
        select * from `order`
    </select>

    <update id="updateOrder">
        update `order`
        set sender = #{sender}, tel = #{tel}, type = #{type}, des = #{des}, position = #{position},
            timeSubscribe = #{timeSubscribe}, solver = #{solver}, timeStart = #{timeStart},
            timeDistribution = #{timeDistribution}, progress = #{progress}, feedback = #{feedback}, timeEnd = #{timeEnd}
        where id = #{id}
    </update>

    <resultMap id="orderMap" type="com.kkkoke.networkrepair.pojo.Order">
        <id property="id" column="id"/>
        <result property="sender" column="sender"/>
        <result property="tel" column="tel"/>
        <result property="type" column="type"/>
        <result property="des" column="des"/>
        <result property="position" column="position"/>
        <result property="timeSubscribe" column="time_subscribe"/>
        <result property="solver" column="solver"/>
        <result property="timeStart" column="time_start"/>
        <result property="timeDistribution" column="time_distribution"/>
        <result property="progress" column="progress"/>
        <result property="feedback" column="feedback"/>
        <result property="timeEnd" column="time_end"/>
    </resultMap>
</mapper>